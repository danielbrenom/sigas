<ons-page>
    <ons-toolbar>
        <div class="center">SIGAS</div>
    </ons-toolbar>

    <ons-tabbar swipeable position="bottom">
        <ons-tab page="tab1.html" label="Inicio" icon="fa-medkit" active>
        </ons-tab>
        <ons-tab page="tab2.html" label="Histórico" icon="fa-history">
        </ons-tab>
        <ons-tab page="tab3.html" label="Perfil" icon="fa-user-circle">
        </ons-tab>
    </ons-tabbar>
</ons-page>

<template id="tab1.html">
    <ons-page id="Tab1">
        <ons-row>
            <ons-col style="padding: 0 10px">
                <ons-card modifier="material">
                    <div class="title">
                        <h2 class="card__title" style="text-align: center;">Qual especialidade você procura?</h2>
                    </div>
                    <div class="content">
                        <ons-row>
                            <ons-col width="10%">
                                <ons-icon icon="md-search" style="font-size: 20pt"></ons-icon>
                            </ons-col>
                            <ons-col width="90%">
                                <ons-select id="fSelectEsp" modifier="material" style="width: 100%;">
                                    <option value="">Selecione uma especialidade</option>
                                    <option value="0">Clinica</option>
                                    <option value="1">Cirurgião Dentista</option>
                                </ons-select>
                            </ons-col>
                        </ons-row>
                    </div>
                </ons-card>
            </ons-col>
        </ons-row>
    </ons-page>
</template>

<template id="tab2.html">
    <ons-page id="Tab2">
        <p style="text-align: center;">
            This is the second page.
        </p>
    </ons-page>
</template>
<template id="tab3.html">
    <ons-page id="Tab3">
        <p style="text-align: center;">
            This is the third page.
        </p>
    </ons-page>
</template>

<script>
    $(function () {
        // $(document)[0].addEventListener('prechange', function(event) {
        //     $('ons-toolbar .center')
        //         .innerHTML = event.tabItem.getAttribute('label');
        // });

        $("#fSelectEsp").change(function () {
            $.get("/mobile/get-profissionais", {esp: $(this).val()}, function (data) {
                if ($("#Tab1 .page__content #prof_found").length)
                    $("#Tab1 .page__content #prof_found").remove();
                $("#Tab1 .page__content").append(data);
            })
        });

        fn = {};

        fn.open = function () {
            $("#menu")[0].open();
        };

        fn.load = function (page) {
            let content = $('#content')[0],
                menu = $('#menu')[0];
            content.load(page).then(menu.close.bind(menu));
        };
    });

</script>